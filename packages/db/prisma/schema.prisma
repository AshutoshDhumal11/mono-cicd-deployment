generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String @unique
  password String
  todos Todo[]
}

model Todo {
  id String @id @default(uuid())
  userId String
  title String
  completed Boolean @default(false)
  user User @relation(fields: [userId], references: [id])
}
